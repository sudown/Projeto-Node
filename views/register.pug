extends layout

block body
  div#login
    h3.text-center.text-white.pt-5 Tarefas
    div.container
      div#login-row.row.justify-content-center.align-items-center
        div#login-column.col-md-5
          div#login-box.col-md-12.card
            form#login-form.form(action="/register" method="post")
              h3.text-center.text-info Criar uma nova conta
              div.form-group
                br
                input#email.form-control(type="text" name="nome" placeholder="Nome")
              div.form-group
                  br
                  input#email.form-control(type="email" name="email" placeholder="E-mail")
              div.form-group
                  br
                  input#email.form-control(type="password" name="password" placeholder="Senha")
              div.form-group
                  br
                  input#email.form-control(type="password" name="confirmPassword" placeholder="Confirmar senha")
              div.form-group.center-row
                div
                  input(type="checkbox")
                  strong Aceito os 
                    a(href="https://www.facebook.com/terms") termos
                input.btn.btn-primary(type="submit")
              div.form-group
                a.btn.btn-danger.form-control(href="/google") Entrar com uma conta Google
                br
                br
                a.btn.btn-secondary.form-control(href="/Microsoft") Entrar com uma conta Microsoft
              div.form-group.center-col
                a.alert-link(href="/esqueci") Esqueci a minha senha
