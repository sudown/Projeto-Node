extends layout

block body
  div#login
    h3.text-center.text-white.pt-5 Tarefas
    div.container
      div#login-row.row.justify-content-center.align-items-center
        div#login-column.col-md-5
          div#login-box.col-md-12.card
            form#login-form.form(action="/redefinir-senha" method="post")
              h3.text-center.text-info Redefinir senha
              hr
              p.text-center.text-info Você está apenas um passo de sua nova senha, recupere sua senha agora
              div.form-group
                br
                input.form-control(type="password" name="password" placeholder="Senha")
              div.form-group
                br
                input.form-control(type="password" name="confirmPassword" placeholder="Confirmar Senha")
                br
              div.form-group.center-row
                input.btn.btn-primary.form-control(type="submit" value="Solicitar uma nova senha")
              div.form-group.center-col
                a.alert-link(href="/login") Entrar